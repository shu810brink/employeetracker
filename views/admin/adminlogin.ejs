<!DOCTYPE html>
<html>
<head>
	<title>Login</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="./css/main.css">

	<script type="text/javascript">
		$(document).ready(function(){

			$( "#form3" ).submit(function(event) {
				event.preventDefault();

				$.ajax({
					type: 'POST',
					url: '/adminlogin',
					data: $('#form3').serialize(),
					dataType: "json",
					success: function(response){
						//alert("a");
						//console.log(response.Success);
						$('#form3')[0].reset();

						document.getElementById("check1").innerHTML=response.Success;
         					//ADD THIS CODE
         					setTimeout(function(){
         						document.getElementById("check1").innerHTML="";
         					},3000);
         					if (response.Success=="Success!") {
         						document.getElementById("aa1").click();
         					};
         				},
         				error: function() {
         				}
         			})
			});

		});
	</script>
</head>
<body>
	<div class="col-md-4 col-md-offset-4">
		<div>
			<p>Admin-Login</p>
		</div>
		<div class="form-group">
			<form id="form" method="post" >
				<input type="text" name="email" placeholder="E-mail" required="" class="form-control"><br/>
				<input type="password" name="password" placeholder="Password" required="" class="form-control"><br/>
				<input type="submit" value="Login" class="btn btn-success">
			</form>
		</div>
		<div class="mssg bg-danger">
			<span id="check1" ></span>
		</div>
		<div id="LangTable"><a href="/adminprofile" id="aa1"></a>
		</div>
		<div><span>Do you forgot password?</span><a href="/adminforgetpass">Click here</a>
		<div><span>Create a new Account?</span><a href="/admin">Register here</a>

		</div>
		
	</div>
</body>
</html>